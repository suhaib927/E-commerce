@page
@model E_commerce_Temp.Pages.Categories.DeleteModel

<form method="post">
    <input asp-for="Category.Id" hidden />
    <div class="container">
        <div class="row pt-4 pb-3">
            <div class="col-6">
                <h2 class="text-primary">
                    Create New Category
                </h2>
            </div>
            <div class="col-6 text-end">
                <a asp-page="/categories/index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle"></i> Back to Category List
                </a>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Category.Name" class="form-label"></label>
            <input asp-for="Category.Name" disabled class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Category.Description" class="form-label"></label>
            <input asp-for="Category.Description" disabled class="form-control" />
        </div>

        <button type="submit" class="btn btn-danger form-control">Delete</button>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
